<%- include("partials/header.ejs") %>

<div class="container">

    <div class="content">
        <% if (postId) { %>
            <div class="content-text b1">
                <h1>Edit Post</h1>
                <div class="mb-3">
                    <form action="/update" method="post">
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="title" placeholder="Title" value="<%= title %>" required>

                        <textarea class="form-control" id="exampleFormControlTextarea1" name="content" id="content" cols="30" rows="20" placeholder="Content"><%= content %></textarea>

                        <input hidden type="text" name="idx" value="<%= postId %>">
                        
                        <div class="text-end">
                            <input class="btn" type="submit" value="Update Post">
                        </div>
                    </form>
                </div>
            </div>

        <% } else { %>

            <div class="content-text b1">
                <h1>Create Post</h1>
                <div class="mb-3">
                    <form action="/save" method="post">
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="title" placeholder="Title" required>

                        <textarea class="form-control" id="exampleFormControlTextarea1" name="content" id="content" cols="30" rows="20" placeholder="Content"></textarea>

                        <div class="text-end">
                            <input class="btn" type="submit" value="Create Post">
                        </div>
                    </form>
                </div>
            </div>

        <% } %>
    </div>

</div>

<%- include("partials/footer.ejs") %>
